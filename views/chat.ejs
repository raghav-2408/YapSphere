            font-weight: 400;
            font-style: normal;
        }

        .container {
            position: relative;
            top: 20px;
            margin: auto;
            background-color: white;
            width: 90%;
            max-width: 1300px;
            height: 655px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 20px;
            box-shadow: 0px 4px 18px 19px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .mainChat {
            background-color: rgb(236, 236, 237);
            width: 100%;
            height: 550px;
            border: 1px solid grey;
            overflow-y: auto;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 13px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            word-wrap: break-word;
        }

        .chatSection {
            background: white;
            width: auto;
            border-radius: 6px;
            font-size: 16px;
            margin-top: 8px;
            padding: 7px;
            display: inline-block;
            max-width: 60%;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .chatSection.user-message {
            background-color: #037501;
            align-self: flex-end;
            border-radius: 10px;
            color: white;
            padding: 10px;
        }

        .chatSection.other-message {
            background-color: #181863;
            color: white;
            align-self: flex-start;
            border-radius: 10px;
            padding: 10px;
        }

        .inputSec {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        .inputSec input {
            flex: 1;
            border-radius: 20px;
            padding: 10px;
            border: 2px solid #ddd;
            outline: none;
        }

        .inputSec button {
            margin-left: 10px;
            border-radius: 50%;
            padding: 10px 15px;
            background-color: #060694;
            color: white;
            /* width: 47px; */
            transition: background-color 0.2s ease;
        }

        .inputSec button:hover {
            background-color: #050572;
        }

        #welcomeMessage {
            text-align: center;
            font-size: 25px;
            letter-spacing: 0px;
            font-weight: 700;
        }

        .title {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        img {
            width: 45px;
            height: 45px;
        }

        .btn:hover {
            background-color: #050572;
            color: white;
        }

        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 3px;
            height: 1px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #bcbaba;
            border-radius: 65px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #555;
        }

        small {
            position: relative;
            padding: 10px;
            font-size: 11px;
            letter-spacing: 1px;
            top: 2px;
        }

        #tick {
            font-size: 14px;
            position: relative;
            top: 3px;
        }

        .username {
            color: #f57b66;
            font-weight: bold;
        }

        #logout {
            font-size: 14px;
        }
        
        #logout:hover {
            border: none;
            font-size: 14px;
        }

        .date-separator {
            font-weight: 600;
            font-size: 13px;
        }

        /* Media query for smaller screens */
        @media (max-width: 768px) {
            .container {
                top: 0;
                height: 843px;
                width: auto;
                border-radius: 0px;
            }

            .mainChat {
                height: 100%;
            }

            .inputSec button {
                padding: 8px 12px;
            }

            .chatSection {
                max-width: 80%;
            }
        }

        

        /* Media query for very small devices (like mobile phones) */
        @media (max-width: 480px) {
            .container {
                top: 0;
                height: 842px;
                width: auto;
                border-radius: 0px;
            }

            .emojiContainer{
                height: auto;
            }

            .mainChat {
                height: auto;
            }

            .inputSec input {
                font-size: 14px;
            }

            .inputSec button {
                padding: 6px 10px;
            }

            #welcomeMessage {
                font-size: 16px;
            }

            .chatSection {
                font-size: 14px;
                max-width: 90%;
            }
        }

